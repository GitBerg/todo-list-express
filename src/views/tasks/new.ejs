<%- include('../layouts/header', {title: 'New Task' }) %>
<%- include('../layouts/menu') %>

<section class="section">
    <div class="container">
      <h1 class="title size-4">Nova tarefa</h1>

      <form action="/checklists/<%=checklistId%>/tasks" method="post">
        <div class="field">
          <label class="label">Nome</label>
          <div class="control">
            <input class="input" type="text" name="task[name]" placeholder="Tarefa" value="<%=task.name%>">
          </div>
        </div>

        <button type="submit" class="button is-success">Salvar</button>
        <a href="/checklists/<%=checklistId%>" class="button">Cancelar</a>
      </form>
    </div>
  </section>

  <%- include('../layouts/footer') %> 